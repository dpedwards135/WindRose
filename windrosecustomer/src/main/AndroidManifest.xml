<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidparkeredwards.windrosecustomer">

    <application
        android:name="com.davidparkeredwards.windrosetools.WindroseApplication"
        android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" android:theme="@style/AppTheme">

        <activity
            android:name="com.davidparkeredwards.windrosetools.activity.WLoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>/>
        </activity>

        //This Alias provides link from TOOLS to specific App
        <activity-alias
            android:name=".WMainActivity"
            android:targetActivity=".MainCustomerActivity"
            />
        <activity android:name=".MainCustomerActivity" android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.davidparkeredwards.windrosetools.activity.WRecyclerViewActivity"
            android:label="Configure Company"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="com.davidparkeredwards.windrosetools.activity.SignUp"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.davidparkeredwards.windrosetools.activity.SignInActivity"
            android:label="Sign In"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.davidparkeredwards.windrosetools.activity.NewCompanySetUp"
            android:label="New Company"
            android:theme="@style/AppTheme.NoActionBar"/>
        

    </application>

</manifest>